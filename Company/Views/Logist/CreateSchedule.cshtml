@model Company.Models.Flights

@{
    ViewData["Title"] = "Создать рейс";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>

        <form method="post" asp-action="Create" asp-controller="Schedule">
            <div class="mb-3">
                <label asp-for="numberFlight" class="form-label">Номер рейса:</label>
                <input asp-for="numberFlight" class="form-control" />
                <span asp-validation-for="numberFlight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Route.DepartureStopsId" class="form-label">Место отправления:</label>
                <select asp-for="Route.DepartureStopsId" class="form-select" asp-items="ViewBag.Stops">
                    <option value="">-- Выберите --</option>
                </select>
                <span asp-validation-for="Route.DepartureStopsId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Route.ArrivalStopsId" class="form-label">Место прибытия:</label>
                <select asp-for="Route.ArrivalStopsId" class="form-select" asp-items="ViewBag.Stops">
                    <option value="">-- Выберите --</option>
                </select>
                <span asp-validation-for="Route.ArrivalStopsId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="timeDeparture" class="form-label">Время отправления:</label>
                <input asp-for="timeDeparture" type="time" class="form-control" />
                <span asp-validation-for="timeDeparture" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="timeArrival" class="form-label">Время прибытия:</label>
                <input asp-for="timeArrival" type="time" class="form-control" />
                <span asp-validation-for="timeArrival" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Route.intermediateStops" class="form-label">Промежуточные остановки:</label>
                <textarea asp-for="Route.intermediateStops" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Route.intermediateStops" class=&quot;text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
            <a asp-action="Index" asp-controller="Schedule" class="btn btn-secondary">Отмена</a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>