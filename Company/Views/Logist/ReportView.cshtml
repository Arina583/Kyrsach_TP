@{
    ViewData["Title"] = "Билеты";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <style>
        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block1 {
            width: 50%; /* Ширина блоков */
            border-width: 1;
            border-style: solid;
            border-color: white;
        }

        button {
            width: 100%;
            padding: 12px;
            font-size: 1.1rem;
            background-color: #005baa;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 700;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #003d80;
            }

        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .report-container {
            margin-top: 20px;
            border: 1px solid #ccc;
            padding: 10px;
        }

        .report-header {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <header>Панель логиста</header>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <div class="container1">
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Drivers'">Водители</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Buses'">Автобусы</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Schedule'">Расписание</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Report'">Отчеты</button>
        </div>
    </div>
    <main>
        <div class="report-header">Отчет о рейсе</div>
        <div>@Model.ReisInfo</div>
        <div>@Model.Time</div>
        <div>@Model.Route</div>
        <div>Количество купленных билетов: @Model.BiletCount</div>
        <div>Купленные места: @Model.SeatNumbers</div>
        <button onclick="printReport()">Распечатать отчет</button>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script>
            function printReport() {
            var printContents = document.querySelector('.report-header').parentNode.outerHTML;
            var originalContents = document.body.innerHTML;
            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
    </script>
</body>
</html>
