@model IEnumerable<Company.Models.Flights>
@{
    ViewData["Title"] = "Рейсы";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        div {
            margin-bottom: 80px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #001385;
            color: white;
        }

        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block1 {
            width: 50%; /* Ширина блоков */
            border-width: 1;
            border-style: solid;
            border-color: white;
        }
    </style>
</head>
<body>
    <header>Расписание рейсов</header>
    <div class="container1">
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Drivers'">Водители</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Buses'">Автобусы</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Schedule'">Расписание</button>
        </div>
        <div class="form-block1">
            <button onclick="window.location.href='/Logist/Report'">Отчеты</button>
        </div>
    </div>
    <form asp-action="Schedule" method="get">
        <label for="departureCity">Город отправления:</label>
        <input type="text" id="departureCity" name="departureCity" value="@ViewBag.DepartureCity" />

        <label for="arrivalCity">Город прибытия:</label>
        <input type="text" id="arrivalCity" name="arrivalCity" value="@ViewBag.ArrivalCity" />

        <button type="submit">Применить фильтр</button>
    </form>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Номер рейса</th>
                    <th>Откуда</th>
                    <th>Куда</th>
                    <th>Отправление</th>
                    <th>Прибытие</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var flight in Model)
                {
                    <tr>
                        <td>@flight.numberFlight</td>
                        <td>@flight.Route.cityDeparture.nameStop</td>
                        <td>@flight.Route.cityArrival.nameStop</td>
                        <td>@flight.timeDeparture</td>
                        <td>@flight.timeArrival</td>
                        <td>@flight.status</td>
                        <td>
                            @*Кнопки для редактирования и удаления*@
                            <a asp-action="#" asp-route-id="@flight.Id">Редактировать рейс</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @* Кнопки для создания нового рейса *@
        <a asp-action="Create">Создать новый рейс</a>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
