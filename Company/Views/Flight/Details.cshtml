@model Company.Models.Flights

@{
    ViewData["Title"] = "Детали рейса";
    Layout = null;
    string routeName = $"{Model.Route.cityDeparture.nameStop} - {Model.Route.cityArrival.nameStop}";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/detail.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <h1>@routeName</h1>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div>
                <h4>Информация о рейсе</h4>
                <hr />
                <p class="card-text">
                    <b>Номер рейса:</b> @Model.numberFlight<br />
                    <hr />
                    <b>Место отправления:</b> @Model.Route.cityDeparture.nameStop (@Model.Route.cityDeparture.adress)<br />
                    <b>Время отправления:</b> @Model.timeDeparture<br />
                    <b>Место прибытия:</b> @Model.Route.cityArrival.nameStop (@Model.Route.cityArrival.adress)<br />
                    <b>Время прибытия:</b> @Model.timeArrival<br />
                    <hr />
                    <b>Статус рейса:</b> @Model.status<br />
                    <hr />
                    <b>Маршрут:</b> @Model.Route.intermediateStops<br />
                </p>
            </div>
            <div>
                @{
                    string from = TempData["From"]?.ToString();
                    string to = TempData["To"]?.ToString();
                }
                <form asp-action="Search" method="post">
                    <input type="hidden" name="from" value="@from" />
                    <input type="hidden" name="to" value="@to" />
                    <button type="submit" class="btn btn-primary">Вернуться к списку</button>
                </form>
            </div>
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
