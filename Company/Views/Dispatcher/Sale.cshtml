@model IEnumerable<Routes>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block {
            width: 45%; /* Ширина блоков */
        }

        .form-block1 {
            width: 50%; /* Ширина блоков */
            border-width: 1;
            border-style: solid;
            border-color: white;
        }
    </style>
</head>
<body>
    <header>Продажа билетов</header>
    <h1>Выбор маршрута</h1>
    <table class="table table-striped">
        @foreach (var route in Model)
        {
            <tr>
                <td>@route.cityDeparture → @route.cityArrival</td>
                <td><a asp-action="Select" asp-route-id="@route.id">Посмотреть билеты</a></td>
            </tr>
        }
    </table>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function showAlert() {
            alert("Оплата прошла! Нажмите, чтобы распечатать билет.");
        }
    </script>
</body>
</html>
