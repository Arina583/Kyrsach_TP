@model Company.ViewsModels.SaleViewModels;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block {
            width: 45%; /* Ширина блоков */
        }

        .form-block1 {
            width: 50%; /* Ширина блоков */
            border-width: 1;
            border-style: solid;
            border-color: white;
        }
    </style>
</head>
<body>
    <header>Продажа билетов</header>
    <form asp-action="Sale" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Покупка билета</h4>

            <div class="form-group">
                @Html.LabelFor(m => m.Passenger.firstName)
                @Html.TextBoxFor(m => m.Passenger.firstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Passenger.firstName)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Passenger.lastName)
                @Html.TextBoxFor(m => m.Passenger.lastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Passenger.lastName)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Passenger.patronymic)
                @Html.TextBoxFor(m => m.Passenger.patronymic, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Passenger.patronymic)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Passenger.passportData)
                @Html.TextBoxFor(m => m.Passenger.passportData, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Passenger.passportData)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Passenger.email)
                @Html.TextBoxFor(m => m.Passenger.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Passenger.email)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Flight.Id)
                @Html.DropDownListFor(m => m.Flight.Id, Model.AvailableFlights, "-- Выберите рейс --", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Flight.Id)
            </div>

            <input type="submit" value="Купить билет" class="btn btn-primary" />
        </div>

        <div class="col-md-6">
            <p><strong>Заглушка:</strong></p>
            <img src="/images/sale_stub.png" alt="Заставка продажа билетов" style="max-width: 100%;" />
        </div>
    </div>
    </form>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function showAlert() {
            alert("Оплата прошла! Нажмите, чтобы распечатать билет.");
        }
    </script>
</body>
</html>
