@model List<Company.Models.Tickets>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block {
            width: 45%;
        }

        .form-block1 {
            width: 50%;
            border-width: 1;
            border-style: solid;
            border-color: white;
        }
    </style>
</head>
<body>
    <header>Возврат</header>
    <main>
        @if (Model != null && Model.Count > 0)
        {
            <!-- Фильтруем билеты только со статусом 'Куплен' -->
            var filteredTickets = Model.Where(t => t.status == "Куплен");

            if (filteredTickets.Any())
            {
                <!-- Отображаем найденные купленные билеты -->
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Номер рейса</th>
                            <th>Номер места</th>
                            <th>Маршрут</th>
                            <th>Время</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in filteredTickets)
                        {
                            <tr>
                                @if (ticket.Flight != null)
                                {
                                    <td>@ticket.Flight.numberFlight</td>
                                    <td>@ticket.numberSeat</td>
                                    @if (ticket.Flight?.Route != null)
                                    {
                                        <td>@ticket.Flight.Route.cityDeparture.nameStop → @ticket.Flight.Route.cityArrival.nameStop</td>
                                    }
                                    else
                                    {
                                        <td colspan="3">Данные о маршруте отсутствуют.</td>
                                    }
                                    <td>@ticket.Flight.timeDeparture.ToString() - @ticket.Flight.timeArrival.ToString()</td>
                                    <td>
                                        <form asp-action="ConfirmReturn" method="get">
                                            <input type="hidden" name="id" value="@ticket.id" />
                                            <button type="submit" class="btn btn-danger">Оформить возврат</button>
                                        </form>
                                    </td>
                                }
                                else
                                {
                                    <td colspan="3">Данные о рейсе отсутствуют.</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Билетов для возврата нет</p>
            }
        }
        else
        {
            <!-- Форма поиска билетов -->
            <h1>Поиск билетов для возврата</h1>
            <form asp-action="ReturnTicket" method="post">
                <div class="form-group">
                    <label for="from">Откуда:</label>
                    <input type="text" class="form-control" name="from" placeholder="Город отправления" required />
                </div>
                <div class="form-group">
                    <label for="to">Куда:</label>
                    <input type="text" class="form-control" name="to" placeholder="Город назначения" required />
                </div>
                <div class="form-group">
                    <label for="departureTime">Время отправления:</label>
                    <input type="time" class="form-control" name="departureTime" required />
                </div>
                <button type="submit" class="btn btn-primary">Найти билеты</button>
            </form>
        }
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
