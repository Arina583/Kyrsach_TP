@model Company.Models.Tickets
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ПассажирскийПуть</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .container1 {
            display: flex;
            justify-content: space-around;
            margin-bottom: 10px;
        }

        .form-block {
            width: 45%; /* Ширина блоков */
        }

        .form-block1 {
            width: 50%; /* Ширина блоков */
            border-width: 1;
            border-style: solid;
            border-color: white;
        }
    </style>
</head>
<body>
    <header>Возврат</header>
    <main>
        <div class="container mt-5">
            <h1>Подтверждение возврата билета №@Model.id</h1>
            <p><strong>Маршрут:</strong> @Model.Flight.Route.cityDeparture.nameStop → @Model.Flight.Route.cityArrival.nameStop</p>
            <p><strong>Время отправления:</strong> @Model.Flight.timeDeparture</p>
            <p><strong>Место:</strong> @Model.numberSeat</p>

            <form asp-action="PostReturnTicket" method="post">
                <input type="hidden" name="ticketId" value="@Model.id" />
                <button type="submit" class="btn btn-success">Подтвердить возврат</button>
            </form>
        </div>
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - ПассажирскийПуть - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function showAlert() {
            alert("Возврат успешен!");
        }
    </script>
</body>
</html>